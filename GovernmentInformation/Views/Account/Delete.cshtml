@model GovernmentInformation.Models.User

<h2>Are you sure you want to delete this user? You cannot undo this action.</h2>

<form method="post">
    <div class="form-group">
        <input asp-for="UserId" type="hidden" value="@Model.UserId" />
        <input asp-for="UserName" type="hidden" value="@Model.UserName" />
        <button class="btn-danger" onclick="alert('User has been deleted.')">Don't do it!</button>
    </div>
</form>