@model GovernmentInformation.Models.Query

<h2>Are you sure you want to delete this Query? You cannot undo this action.</h2>

<form method="post">
    <div class="form-group">
        <input asp-for="QueryId" type="hidden" value="@Model.QueryId" />
        <input asp-for="User" type="hidden" value="@Model.User" />
        <input asp-for="Description" type="hidden" value="@Model.Description" />
        <button class="btn-danger" onclick="alert('Query has been deleted.')">Don't do it!</button>
    </div>
</form>